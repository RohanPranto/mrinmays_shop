<!-- views/cart.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Shopping Cart</title>
</head>
<body>
    <h1>Your Shopping Cart</h1>

    <% if (cartContents.length === 0) { %>
        <p>Your cart is empty.</p>
    <% } else { %>
        <ul>
            <% cartContents.forEach(product => { %>
                <li><%= product.name %> - <%= product.price %></li>
            <% }); %>
        </ul>
        <p>Total: <%= calculateTotal(cartContents) %></p>
        <!-- Additional checkout button or form could be added here -->
    <% } %>

    <!-- Your additional HTML/CSS/JavaScript for the shopping cart page -->
</body>
</html>
