<!-- views/products/category.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= category %> Products</title>
  <!-- Add any additional styles or scripts here -->
</head>
<body>
  <h1><%= category %> Products</h1>

  <% products.forEach(product => { %>
    <div class="product">
      <h2><%= product.name %></h2>
      <p><%= product.description %></p>
      <p>Price: <%= product.price %></p>
      <p>Category: <%= product.category %></p>
      <img src="<%= product.imagePath %>" alt="<%= product.name %> Image">
      
      <!-- Add Details Button with a link to the product details page -->
      <a href="/products/<%= product._id %>" class="details-button">Details</a>
    </div>
  <% }) %>

  <!-- Add any additional HTML, scripts, or styles here -->
</body>
</html>
