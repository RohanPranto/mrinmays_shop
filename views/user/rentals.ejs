<%- include('../include/head.ejs') %>
    </head>

    <body>
        <%- include('../include/navigation.ejs') %>
        <link rel="stylesheet" href="/css/___.css">

        <main>

            <div class="main-content">
                <section class="rental-section">
                    <% if (rentals.length > 0) { %>
                        <ul class="rental-list">
                            <% rentals.forEach(rental => { %>
                                <li class="rental-item">
                                    <h2 class="rental-title">Rental ID: <%= rental._id %></h2>
                                    <p class="rental-details">User ID: <%= rental.userId %></p>
                                    <p class="rental-details">Rental Start Date: <%= rental.rentalStartDate %></p>
                                    <p class="rental-details">Rental End Date: <%= rental.rentalEndDate %></p>
                                    <p class="rental-details">Rental Status: <%= rental.status %></p>
                                    <p class="rental-details">Rental Cost: <%= rental.rentalCost %></p>
                                    <p class="rental-details">Payment Status: <%= rental.paymentStatus %></p>
                                    <!-- Add more details as needed -->
                                </li>
                            <% }); %>
                        </ul>
                    <% } else { %>
                        <p>No rentals available.</p>
                    <% } %>
                </section>
            </div>

            

        </main>


        <style>
            /* body {
                font-family: 'Arial', sans-serif;
                background-color: #f8f8f8;
